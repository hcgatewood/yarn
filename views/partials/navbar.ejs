<div class='navbar'>
  <div class='center'>
    <!-- LogoName -->
    <div class='navbar-item logoname'>
      <a class='logo nav-font' href='/'>Rolling Story</a>
    </div>

    <!--Search Bar -->
    <div class='navbar-item search-bar input-group'>
      <div class='input-group'>
        <input type='text' class='form-control' placeholder='Find a story...'>
        <span class='input-group-btn'>
        <button class='btn btn-default' id='search_button' type='button'> <span class='glyphicon glyphicon-search' aria-hidden='true'></span></button>
         </span>
      </div>
    </div>

    <!--Logout & Settings-->
    <div class='navbar-item nav-font logout-settings navigation'>
      <% if (startWriting) { %>
      <a href='/rooms/main' class='writing item'>Start writing</a>
      <% } %>
      <a href='/rooms/main' class='current item'>Current room</a>
      <% if (user) { %>
      <a href='/find' class='name item'><%= username %></a>
      <a href='/logout' class='login-choice item'>Sign out</a>
      <% } else { %>
      <a class='login-choice item signin'>Sign in</a>
      <% } %>

    <!--Overlay #1-->
    <div class='overlay'>
      <span class='glyphicon glyphicon-remove pull-right' aria-hidden='true'></span>
    </div>
    <div id='modal'>
      <div class='row'>
        <h3 id='login_header'>Sign in or create an account</h3>
      </div>
      <div class='row' id='alignsignup_btn'>
        <button class='btn btn-primary1 btn-lg raised signin_btn' id='b2 'type='button'>Sign in with Facebook</button>
      </div>

      <div class='row'>
        <button class='btn btn-primary2 btn-lg raised signin_btn' type='button'>Sign in with Google</button>
      </div>
      <div class='row'>
        <h3 id='login_footer'>Sign in or sign with email</h3>
      </div>
    </div>
    <!--Overlay #2-->
    <div id='modal2'>
      <div class='row'>
        <h3 id='login_header'>Sign in/ Sign up</h3>
      </div>
      <form action='/find' method='post'>
        <div id='align_btn' class='form-group'>
          <input placeholder='Username' type='text' class='form-control' name='username'>
        </div>
        <div id='align_btn' class='form-group'>
          <input placeholder='Password' type='password' class='form-control' name='password'>
        </div>
        <button type='submit' class='btn btn-primary btn-lg raised signin_btn'>Login</button>
      </form>
     </div>
    </div>
  </div>
</div>
